extends layout

block content
  h1= title
  p Welcome to #{title}
  p I am currently working on assignment 10.
  button(type="button" class="btn btn-secondary" onclick="doBump()") Press Here
  div#bump Bump the count

  script.
    let count = 0
    let bump = 1
    function doBump() {
      count = count + bump 
      bump = bump + 1
      document.getElementById("bump").innerHTML = "Count " + count + " Bump " + bump;
    }